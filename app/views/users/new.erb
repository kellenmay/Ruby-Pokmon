<h1>Sign up</h1>
<form action="/signup" method="POST">
<label>Name: </label>
<input type="text" name="name"><br>
<label>Email: </label>
<input type="text" name="username"><br>
<label>Password: </label>
<input type="password" name="password"><br>
<input type="submit">
</form>
<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>