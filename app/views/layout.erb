        <h1>
          <%if logged_in?%>
              If you want to see your current pokedex click <a href="/users/<%=current_user.id%>"><input type="submit" value="here"></a><br><br>
                <%end%>
        </h1>



         <body>   
         <% flash.keys.each do |type| %>
            <div data-alert class="flash <%= type %> alert-box radius">
              <%= flash[type] %>
              <a href='/' class="close"><input type="submit" value="Try Again?"></a>
            </div>
          <% end %>
          </body>
        <%= yield %>
    </div>
</div>

